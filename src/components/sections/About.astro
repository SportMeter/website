---
import { Image } from "astro:assets";
import about from "@/assets/pages/about/about.png";
import { Icon } from "astro-icon/components";
import Link from "@/components/primitives/Link.astro";

const { title, subtitle, content } = Astro.props;
const locale = Astro.currentLocale || "nl";
---

<section class="relative w-full pb-40">
  <!-- Hero Image Section -->
  <div class="relative w-full h-[50em] overflow-hidden rounded-3xl">
    <Image
      src={about}
      alt="About"
      class="absolute inset-0 w-full h-full object-cover"
    />
  </div>

  <!-- Content Section -->
  <div class="mt-16 font-semibold">
    <div class="grid grid-cols-1 lg:grid-cols-[0.6fr_1fr] gap-8">
      <!-- Title -->
      <div class="flex items-center">
        <h2 class="text-3xl lg:text-4xl leading-tight">
          {title}
        </h2>
      </div>

      <!-- Content -->
      <div class="text-lg lg:text-xl leading-relaxed space-y-3 text-gray-900">
        <p set:html={subtitle} />
        <p set:html={content} />
      </div>
    </div>

    <!-- Contact Button -->
    <div class="mt-8 lg:mt-12">
				<Link
          href="/contact"
          class="mt-10"
          style="button"
        >
        {locale === "en" ? "Get in Touch" : "Neem Contact Op"}
          <Icon
            name="iconamoon:arrow-top-right-1-thin"
            class="inline-block w-6 h-6 ml-2"
          />
        </Link>
    </div>
  </div>
</section>
